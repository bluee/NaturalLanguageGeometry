@inherits System.Web.Mvc.WebViewPage
@{
    Layout = "~/Views/_Layout.cshtml";
}
<h2>Natural Language to Geometry</h2>
<div class="row">
    <div class="col-md-6">
        <select ng-model="suggest" class="form-control" style="width: 100%" ng-options="x for x in suggestions" ng-click="naturalText = suggest">
            <option value="">-- Select sample -- </option>
        </select>
        <br />
        <textarea type="text" class="form-control" cols="3" rows="5" style="width:100%" ng-model="naturalText">Draw a circle with a radius of 100</textarea>
        <br />
        <div ng-show="errorMessage" class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{errorMessage}}
            <br/>
        </div>
        <a class="btn btn-primary" ng-click="parse()">Send</a>
        
        

        <br />

        <div>
            <canvas id="canvas" width="500" height="500" resize=""></canvas>
        </div>

    </div>
</div>



